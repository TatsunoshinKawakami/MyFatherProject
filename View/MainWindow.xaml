<Window x:Class="ForMyFather.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForMyFather.View"
        xmlns:vm="clr-namespace:ForMyFather.ViewModel" 
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Canvas DockPanel.Dock="Left">
            <StackPanel Height="23" VerticalAlignment="Top" Width="138" Orientation="Horizontal">
                <Label Content="上底" FontSize="10"/>
                <TextBox TextWrapping="Wrap" Text="{Binding Path=Upper}" Width="105"/>
            </StackPanel>
            <StackPanel Height="23" VerticalAlignment="Top" Width="138" Orientation="Horizontal" Canvas.Top="40">
                <Label Content="下底" FontSize="10"/>
                <TextBox TextWrapping="Wrap" Text="{Binding Path=Lower}" Width="105"/>
            </StackPanel>
            <StackPanel Height="23" VerticalAlignment="Top" Width="138" Orientation="Horizontal" Canvas.Top="80">
                <Label Content="高さ" FontSize="10" Width="30"/>
                <TextBox TextWrapping="Wrap" Text="{Binding Path=Height}" Width="105"/>
            </StackPanel>
            <StackPanel Height="23" VerticalAlignment="Top" Width="138" Orientation="Horizontal" Canvas.Top="120">
                <Label Content="分割数" FontSize="10" Width="40"/>
                <TextBox TextWrapping="Wrap" Text="{Binding Path=DivNum, UpdateSourceTrigger=PropertyChanged}" Width="96"/>
            </StackPanel>
            <Button x:Name="button" Content="計算実行" Command="{Binding Path=CalculateCommand}" Width="67" Canvas.Top="160"/>
        </Canvas>
        <ListBox DockPanel.Dock="Right" HorizontalAlignment="Right" x:Name="listBox" ItemsSource="{Binding Path=Shapes}" MinWidth="200">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Polygon Points="{Binding Path=Points}" Stroke="{Binding Path=Stroke}" StrokeThickness="{Binding Path=StrokeThickness}" Stretch="Uniform" Width="200" Height="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </DockPanel>
</Window>
