<Window x:Class="ForMyFather.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForMyFather.View"
        xmlns:vm="clr-namespace:ForMyFather.ViewModel" 
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="138" Orientation="Horizontal">
            <Label Content="上底" FontSize="10"/>
            <TextBox TextWrapping="Wrap" Text="{Binding Path=Upper}" Width="105" Margin="0,0,0,-0.4"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="138" Orientation="Horizontal" Margin="0,45,0,0">
            <Label Content="下底" FontSize="10"/>
            <TextBox TextWrapping="Wrap" Text="{Binding Path=Lower}" Width="105" Margin="0,0,0,-0.4"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="138" Orientation="Horizontal" Margin="0,88,0,0">
            <Label Content="高さ" FontSize="10" Margin="0,0,0,0.2" Width="30"/>
            <TextBox TextWrapping="Wrap" Text="{Binding Path=Height}" Width="105" Margin="0,0,0,-0.4"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="138" Orientation="Horizontal" Margin="0,132,0,0">
            <Label Content="分割数" FontSize="10" Margin="0,0,0,0.2" Width="40"/>
            <TextBox TextWrapping="Wrap" Text="{Binding Path=DivNum, UpdateSourceTrigger=PropertyChanged}" Width="96" Margin="0,0,0,-0.8"/>
        </StackPanel>
        <Button x:Name="button" Content="計算実行" Command="{Binding Path=CalculateCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="67" Margin="10,188,0,0"/>
        <ListBox x:Name="listBox" ItemsSource="{Binding Path=Ans}" HorizontalAlignment="Left" Height="260" VerticalAlignment="Top" Width="268" Margin="216,0,0,0"/>
    </Grid>
</Window>
